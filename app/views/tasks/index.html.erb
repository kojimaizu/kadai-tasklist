<h1>タスク一覧</h1>

<ul>
    <% @tasks.each do |task| %>
    <li><%= link_to task.user.name, tasks_path(task.user) %> :<%= task.status %> &gt; <%= task.content %> &gt; <%= link_to "削除", task, method: :delete, data: { confirm: "削除しますか？" } %> &gt; <%= link_to "編集", edit_task_path(task.id) %></li>
    <% end %>
</ul>

<%= link_to "新規タスクの投稿", new_task_path %>
<%= link_to "ログアウト", logout_path, method: :delete %>